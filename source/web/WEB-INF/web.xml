<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- General description -->
	<display-name>skel-app</display-name>
	<description>
		Basic application layout for personal projects
	</description>

	<!-- Context parameters -->
	<context-param>
		<param-name>webmaster</param-name>
		<param-value>your.mail@he.re</param-value>
		<description>
			The email address of the administrator to whom questions
			and comments about this application should be addressed.
		</description>
	</context-param>
	
	<!-- Entry page -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- Servlet definitions -->
	<servlet>
    	<servlet-name>greetServlet</servlet-name>
    	<servlet-class>io.github.azz.ui.server.GreetingServiceImpl</servlet-class>
  	</servlet>

	<!-- Define mappings -->
	<servlet-mapping>
    	<servlet-name>greetServlet</servlet-name>
    	<url-pattern>/ui/greet</url-pattern>
  	</servlet-mapping>

	<!-- Session config -->
	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>

	<!-- Initial configuration -->
	<listener>
		<listener-class>
			io.github.azz.config.BootConfigurator
		</listener-class>
	</listener>

</web-app>
